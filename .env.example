# ==========================================
# Metra Train Tracker - Environment Variables
# ==========================================
#
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control (it's in .gitignore)
#

# ==========================================
# GTFS API Configuration
# ==========================================

# Metra GTFS API Credentials
# Username and password for GTFS API access
METRA_API_USERNAME=your_username_here
METRA_API_PASSWORD=your_password_here

# GTFS Static Schedule Endpoints (JSON)
# Base URL for static GTFS data
GTFS_STATIC_BASE_URL=https://gtfsapi.metrarail.com

# Available static endpoints:
# /gtfs/schedule/stops
# /gtfs/schedule/stop_times
# /gtfs/schedule/trips
# /gtfs/schedule/shapes
# /gtfs/schedule/routes
# /gtfs/schedule/calendar
# /gtfs/schedule/calendar_dates
# /gtfs/schedule/agency
# /gtfs/schedule/stop_times/<TRIP_ID>

# GTFS Realtime Endpoints
GTFS_REALTIME_ALERTS_URL=https://gtfsapi.metrarail.com/gtfs/alerts
GTFS_REALTIME_TRIP_UPDATES_URL=https://gtfsapi.metrarail.com/gtfs/tripUpdates
GTFS_REALTIME_POSITIONS_URL=https://gtfsapi.metrarail.com/gtfs/positions

# Polling interval for realtime data (milliseconds)
GTFS_REALTIME_POLL_INTERVAL=30000

# ==========================================
# Backend Configuration
# ==========================================

# Server port
PORT=3000

# Node environment (development, production, test)
NODE_ENV=development

# SQLite database path
DATABASE_PATH=./data/gtfs.db

# API request timeout (milliseconds)
API_TIMEOUT=5000

# ==========================================
# Frontend Configuration
# ==========================================

# Backend API URL (used by frontend to connect to backend)
# For local development
VITE_API_URL=http://localhost:3000/api
# For production (Vercel will proxy /api to backend)
# VITE_API_URL=https://chicagorail.app/api

# ==========================================
# Optional: Monitoring & Error Tracking
# ==========================================

# Sentry DSN (optional, for error tracking)
# SENTRY_DSN=your_sentry_dsn_here

# ==========================================
# Optional: Deployment
# ==========================================

# DigitalOcean App Platform deployment settings
# DIGITALOCEAN_APP_ID=your_app_id_here
