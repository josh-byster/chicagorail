# Prefer prebuilt binaries for native modules
prefer-offline=false
fetch-retries=5
fetch-retry-mintimeout=20000
fetch-retry-maxtimeout=120000

# Force prebuilt binaries for better-sqlite3
# Never compile from source (too slow and error-prone in CI/CD)
build-from-source=false
sqlite3_binary_host_mirror=https://github.com/WiseLibs/better-sqlite3/releases/download/
